{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "downlevelIteration": true,
        "lib": ["es6", "dom", "dom.iterable", "ES2019"]
    },
    "include": ["src/**/*"],
    "exclude": ["./node_modules"]
}
