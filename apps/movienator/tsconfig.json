{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "isolatedModules": false,
        "jsx": "react",
        "downlevelIteration": true,
        "lib": ["es6", "dom", "dom.iterable", "ES2019"]
    },
    "exclude": ["./node_modules"],
    "include": ["./src", "./pact"]
}
